---
import { Image } from 'astro:assets'
import FormattedDate from './FormattedDate.astro'

const { heroImage, title, slug, description, pubDate, editDate } = Astro.props
---

<li>
  <a
    href={`/blog/${slug}/`}
    class="w-full flex items-center border-b-2 py-3 border-neutral-300 overflow-hidden hover:shadow-md hover:scale-105 hover:border-neutral-400 transition-all"
  >
    <div class="w-1/3 overflow-hidden">
      <Image
        class="w-full overflow-hidden object-cover"
        src={heroImage}
        width={200}
        height={100}
        alt="placeholder Image"
        transition:name={heroImage}
      />
    </div>
    <div class="pl-3 w-full flex flex-col justify-between">
      <h2
        class="text-lg font-semibold h-12 md:text-xl pb-4"
        transition:name={title}
      >
        {title}
      </h2>
      <div class="flex w-full">
        <div class="flex-1 text-sm">
          <!-- <span
            class="border mx-1 border-neutral-200 dark:border-neutral-700 bg-neutral-50 dark:bg-neutral-800 rounded p-1 text-sm inline-flex items-center leading-3 text-neutral-900 dark:text-neutral-100"
            >Tag1</span
          >
          <span
            class="border mx-1 border-neutral-200 dark:border-neutral-700 bg-neutral-50 dark:bg-neutral-800 rounded p-1 text-sm inline-flex items-center leading-3 text-neutral-900 dark:text-neutral-100"
            >Tag2</span
          >
          <span
            class="border mx-1 border-neutral-200 dark:border-neutral-700 bg-neutral-50 dark:bg-neutral-800 rounded p-1 text-sm inline-flex items-center leading-3 text-neutral-900 dark:text-neutral-100"
            >Tag3</span
          > -->
        </div>
        <div class="mx-3 text-sm text-neutral-400">
          <FormattedDate date={pubDate} />
        </div>
      </div>
    </div>
  </a>
</li>
